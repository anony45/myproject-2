<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView15"
            android:layout_width="253dp"
            android:layout_height="27dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="45dp"
            android:text="Enter Product Details"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/selectItemImage"
            android:layout_width="159dp"
            android:layout_height="187dp"
            android:layout_marginStart="131dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="152dp"
            android:layout_marginBottom="46dp"
            android:src="@drawable/camera" />

        <EditText
            android:id="@+id/itemName"
            android:layout_width="253dp"
            android:layout_height="54dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/edit_textbg"
            android:ems="10"
            android:hint="name of product"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/itemDescription"
            android:layout_width="259dp"
            android:layout_height="48dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/edit_textbg"
            android:ems="10"
            android:gravity="start|top"
            android:hint="description of product"
            android:inputType="textMultiLine" />


        <EditText
            android:id="@+id/itemPrice"
            android:layout_width="256dp"
            android:layout_height="53dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="53dp"
            android:background="@drawable/edit_textbg"
            android:ems="10"
            android:hint="price of product"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/submitButton"
            android:layout_width="212dp"
            android:layout_height="54dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="211dp"
            android:text="Submit" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>