<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   >


    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:background="@color/teal_200"
        android:text="Update Details"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/admineditnm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/admineditnm"
        android:layout_width="336dp"
        android:layout_height="61dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:background="@drawable/edit_textbg"
        android:ems="10"
        android:hint="name of item"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/admineditdescr"
        android:layout_width="336dp"
        android:layout_height="61dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="41dp"
        android:layout_weight="1"
        android:background="@drawable/edit_textbg"
        android:ems="10"
        android:hint="description of item"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admineditnm" />

    <EditText
        android:id="@+id/admineditprc"
        android:layout_width="336dp"
        android:layout_height="61dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="44dp"
        android:layout_weight="1"
        android:background="@drawable/edit_textbg"
        android:ems="10"
        android:hint="price of item"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admineditdescr" />

    <Button
        android:id="@+id/updatebtn"
        android:layout_width="252dp"
        android:layout_height="53dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/button_bg"
        android:text="update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admineditprc" />


</androidx.constraintlayout.widget.ConstraintLayout>